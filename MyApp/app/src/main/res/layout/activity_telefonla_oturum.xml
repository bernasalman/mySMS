<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelefonlaOturumActivity">

    <EditText
        android:id="@+id/telefon_numarası_girdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/girdiler"
        android:drawableStart="@drawable/ic_telefon_android_black_24"
        android:hint="Telefon numaranızı yazın..."
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dogrulama_kodu_girdisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefon_numarası_girdi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/girdiler"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:hint="Doğrulama kodunu yazın..."
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/dogrulama_kodu_gonder_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogrulama_kodu_girdisi"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttonlar"
        android:text="Doğrulama Kodu Gönder"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/dogrulama_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogrulama_kodu_gonder_buttonu"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttonlar"
        android:text="Doğrula"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"/>


</RelativeLayout>