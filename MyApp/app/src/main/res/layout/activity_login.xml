<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            >

            <ImageView
                android:id="@+id/giris_resmi"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/log" />

            <EditText
                android:id="@+id/giris_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_resmi"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/girdiler"
                android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/giris_sifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_email"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/girdiler"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:hint="Şifre..."
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/giris_butonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sifre_unutma_baglantisi"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttonlar"
                android:padding="8dp"
                android:text="Giriş Yap"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/sifre_unutma_baglantisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_sifre"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="Şifremi Unuttum..."
                android:textAlignment="textEnd"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/yeni_hesap_acma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_butonu"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="Henüz hesabınız Yok mu?"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/yada_giris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yeni_hesap_acma"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="ya da şöyle giriş yapın"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/tel_giris_butonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yada_giris"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttonlar"
                android:padding="8dp"
                android:text="Telefonle Giriş Yap"
                android:drawableStart="@drawable/ic_baseline_phone_android_24"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>